{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "arrow-body-style": "off",
    "no-unused-vars": ["warn"],
    "eqeqeq": ["error", "always"],
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 120,
        "trailingComma": "es5",
        "semi": false,
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "no-unused-vars": ["error"],
        "tabWidth": 2,
        "bracketSameLine": false
      }
    ]
  }
}
